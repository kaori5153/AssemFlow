<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaori5153.assemflow.repository.AssemblyProcedureRepository">

  <!-- 受講生情報を全件検索-->
  <select id="searchParts" resultType="com.kaori5153.assemflow.data.Parts">
    SELECT *
    FROM parts
  </select>

  <!-- 組み立て必要部品情報を全件検索-->
  <select id="searchRequiredParts" resultType="com.kaori5153.assemflow.data.RequiredParts">
    SELECT *
    FROM required_parts
  </select>

  <!-- 組み立て手順情報を全件検索-->
  <select id="searchAssemblyProcedure" resultType="com.kaori5153.assemflow.data.AssemblyProcedure">
    SELECT *
    FROM assembly_procedure
  </select>

</mapper>
